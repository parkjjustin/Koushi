<script>
    $(document).ready(function () {
        $('a[href^="#"]').on('click', function (event) {
            event.preventDefault();

            var target = this.hash;
            var $target = $(target);

            $('html, body').stop().animate({
                'scrollTop': $target.offset().top
            }, 500, 'swing', function () {
                window.location.hash = target;
            });
        });
    });

</script>