<div class="register-container">
  <div id="register-input-container">
<h2 class="page-header">Register</h2>

<form method="POST" action="/users/register">
<div class="form-group">

    <label>Username</label>
    <input type="text" class="form-control" placeholder="Username" name="username">
    </div>

<div class="form-group">
    <label>Email</label>
    <input type="text" class="form-control" placeholder="E-mail" name="email">
</div>

<div class="form-group">
<label>Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password">
    </div>

    <div class="form-group">
<label>Confirm Password</label>
    <input type="password" class="form-control" placeholder="Password" name="password2">
    </div>
    <h6 class="account-register">Already have an account? <a href="login" style="text-decoration: underline; font-size: 10px;">Log in!</a></h6>
    <button type="submit" id="create" style="margin-bottom: 30px">Register</button>

    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
    {{/if}}
</form>

</div>
</div>