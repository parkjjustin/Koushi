<img src="/assets/img/invlogo.png" class="inv-logo">

<div class="log-in-container">
    <div class="login-inactive">Log In</div><div class="register-active">Sign Up</div>

<div id="content-holder">

    <div id="login-content" style="display: none">
        <form class="login-form" action="/user" method="POST">
                    <div class="input-group">
                        <input type="email" name="email" id="email" placeholder="E-mail" required aria-required="true" style="height: 50px">
                    </div>
                    
                    <div class="input-group">
                        <input type="password" name="password" id="password" placeholder="Password" required aria-required="true" style="height: 50px">
                    </div>
                    <h6>Forgot your password?</h6>
                    <button type="submit" class="btn btn-default dropdown-toggle" id="login" style="width: 30%">Log In</button>
                    <div class="warning">{{#if error}}</div>
            </form>
</div>


    <div id="register-content" style="display: block">
        <form class="register-form" action="/register" method="POST">
                    <div class="input-group">
                        <input type="text" name="first_name" id="first-name" placeholder="First Name" required aria-required="true" style="height: 50px">
                    </div>

                    <div class="input-group">
                        <input type="text" name="last_name" id="last-name" placeholder="Last Name" required aria-required="true" style="height: 50px">
                    </div>

                    <div class="input-group">
                        <input type="email" name="email" id="email" placeholder="E-mail" required aria-required="true" style="height: 50px">
                    </div>
                    
                    <div class="input-group">
                        <input type="password" name="password" id="password" placeholder="Password" required aria-required="true" maxlength="20" minlength="6" style="height: 50px">
                    </div>

                    <div class="input-group">
                        <input type="password" name="password_confirm" id="validate" placeholder="Confirm Password" required aria-required="true" style="height: 50px">
                    </div>
                    <h6 class="terms">By signing up you agree to our Terms of Service and Privacy Policy</h6>
                    <button type="submit" class="btn btn-default dropdown-toggle" id="create" >Create An Account</button>
                    <div class="warning"></div>
            </form>
    </div>

    </div>























</div>